<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:id="@+id/fragment_menu"
    android:orientation="vertical"
    android:isScrollContainer="false"
    tools:context="com.gep.desarrollos.mirotiseriacliente.fragments.MenuFragment">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="85"
    tools:context="com.gep.desarrollos.mirotiseriacliente.fragments.MenuFragment">


    
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/recycler_menu">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="8dp"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:background="#FF3333"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: "
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


        <TextView
            android:id="@+id/precio_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$1400"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignBaseline="@+id/total"
            android:layout_alignBottom="@+id/total"
            android:layout_toRightOf="@+id/total"
            android:layout_toEndOf="@+id/total" />
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/boton_pedido"
            android:onClick="jumpToPage"
            android:background="@drawable/ic_bandeja"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/precio_total"
            android:layout_toEndOf="@+id/precio_total" />

    </RelativeLayout>

</LinearLayout>